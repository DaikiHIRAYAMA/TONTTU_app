  <div class="progress-bar bg-warning" role="progressbar" style="width: <%= current_user.condition*20 %>%;" aria-valuenow="<%= current_user.condition*20 %>" aria-valuemin="0" aria-valuemax="5"></div>
</div>


  </div>
  <br>

 <h5 class="text-center"><%= link_to '編集', edit_user_registration_path %> </h5>
 <h5 class="text-center"><%= link_to '戻る', root_path %></h5>

